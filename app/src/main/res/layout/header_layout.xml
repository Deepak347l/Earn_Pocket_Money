<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/name"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/iconsoneeurocent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/usernameff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deepak Rawat"
        android:layout_below="@id/name"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contactdevloperdk347@gmail.com"
        android:layout_below="@id/usernameff"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abcdefg"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:padding="5dp"
        android:layout_below="@+id/following"
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/following"
        android:src="@drawable/ic_baseline_file_copy_24"
        android:layout_toRightOf="@id/followers"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        />

    <View
        android:layout_below="@+id/followers"
        android:layout_width="match_parent"
        style="@style/line"/>
</RelativeLayout>