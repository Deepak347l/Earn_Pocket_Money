<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigationAssest.Withdraw">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            android:background="#FFFFFF"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="1dp"
                android:paddingEnd="16dp"
                android:paddingBottom="1dp">

                <ImageView
                    android:id="@+id/leftbtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/chevron_left_"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:text="Withdrawl"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/leftbtn1"
                    />
            </RelativeLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/coinH1FWithdraw11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                app:cardCornerRadius="4dp"
                android:id="@+id/coinH1FWithdraw"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/iconsoneeurocent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:padding="5dp"
                        android:id="@+id/coinDesWithdraw"
                        android:layout_centerHorizontal="true"
                        android:text="Coins earned total"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:layout_below="@+id/coinDesWithdraw"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:text="(100 coin = ₹1)" />
                    <TextView
                        android:id="@+id/coinCWithdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="₹100000"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:id="@+id/usernameWWUU"
                android:layout_below="@+id/coinH1FWithdraw"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Enter Your Paytm Number"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:id="@+id/usernameWWUU1"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Enter ammount(₹1 ~ ₹50)"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/usernameWWUU"
                android:textColorHighlight="@android:color/black"
                />
            <LinearLayout
                android:id="@+id/bn61"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/usernameWWUU1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_edittext1111a"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/paytm"
                    android:scaleType="fitCenter" />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:id="@+id/nativeAdContainerAdWithdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_below="@+id/coinH1FWithdraw11"/>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>